@model League

<h3 class="text-center">Reserve Lane</h3>
<hr />

<div class="container">
<div class="row">
<div class="col-6">
</div>
<div class="col-6">
<form asp-controller="Event" asp-action="Create" method="POST">
  <div class="form-group">
    <label asp-for="Name"></label>
    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    <input asp-for="Name" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="StartDate"></label>
    <span asp-validation-for="StartDate" class="text-danger font-weight-bold"></span>
    <input asp-for="StartDate" class="form-control" />
  </div>

  <button class="btn btn-outline-primary">Create Team</button>
</form>
</div>
</div>
</div>

