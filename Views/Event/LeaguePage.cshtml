@model League

<h3 class="text-center mt-5 display-4">League Page</h3>
<hr />

<div class="container">
<div class="row mt-5">
<div class="col-6">
<img src="/img/bowling-alley-c.jpg" class="d-block w-100 mr-5" alt="image3">
</div>
    <div class="col-6">

<form asp-controller="Event" asp-action="ReserveLane" method="POST">
  <div class="form-group">
    <label asp-for="Name">League Name</label>
    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    <select asp-for="Name" class="form-control">
      @foreach(League league in ViewBag.Leagues) 
      {
        <option value="@league.Name">@league.Name</option>
      }
    </select>
  </div>

  <button class="btn btn-outline-primary">Join League</button>
</form>
    </div>
  </div>
</div>
