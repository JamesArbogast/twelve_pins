@model User

<style>
.btn-nav {
	background-color: #4682B4;
	border: none;
	color: white;
	padding: 10px 20px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 16px;
	margin: 4px 2px;
	transition-duration: 0.4s;
	cursor: pointer;
  border-radius: 3px;
}
.btn-nav:hover {
	background-color: #007BFF;
}
</style>

<h3 class="text-center text-white">Register</h3>
<hr />

<form asp-controller="Home" asp-action="Register" method="POST">
  <div class="form-group">
    <label asp-for="FirstName" class="text-white"></label>
    <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
    <input asp-for="FirstName" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="LastName" class="text-white"></label>
    <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
    <input asp-for="LastName" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Email" class="text-white"></label>
    <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
    <input asp-for="Email" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Password" class="text-white"></label>
    <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
    <input asp-for="Password" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPW" class="text-white"></label>
    <span asp-validation-for="ConfirmPW" class="text-danger font-weight-bold"></span>
    <input asp-for="ConfirmPW" class="form-control" />
  </div>

  <button class="btn-nav mb-5">Register</button>
</form>