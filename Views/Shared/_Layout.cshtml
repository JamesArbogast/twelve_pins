<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - twelve_pins</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Navbar.css">

</head>
<body>
    <header>
        <div id="line"></div>
        <div id="line1"></div>
        <nav id="navigation" class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-center p-3">
            <div style="max-height: 80px" id="navLogo">
                <a class="navbar-brand" href="#"><img src="/img/logo-pin.jpg" class="mx-auto d-block" alt="logo" /></a>
            </div >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav w-100 d-flex justify-content-center">
                <li class="dropdown nav-item"> 
                    <a id="dLabel" data-toggle="dropdown" data-target="#" href="" class="nav-link text-dark">
                        Bowl
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 21">
                                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                            </svg>
                    </a> 
                    <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="ViewReserveLane">Reserve a Lane</a>
                    </li>
                    <li class="dropdown-submenu">
                        <a class="nav-link text-dark mr-5" asp-area="" asp-controller="Home" asp-action="Dashboard">Parties
                        </a>
                        <ul class="dropdown-menu">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Birthday</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Company</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown-submenu">
                        <a class="nav-link text-dark mr-5" asp-area="" asp-controller="Home" asp-action="Dashboard">Leagues
                        </a>
                        <ul class="dropdown-menu">
                            <li class="nav-item">
                                <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Dashboard">Schedule</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark " asp-area="" asp-controller="Event" asp-action="LeaguePage">Tournaments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Dashboard">League Standings</a>
                            </li>
                        </ul>
                    </li>
                </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Specials</a>
                    </li>
                </ul>
                    <li class="nav-item ml-5">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="EatPage">Eat</a>
                    </li>
                    <li class="nav-item ml-5">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Pro Shop</a>
                    </li>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item ml-5">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">Logout (@Context.Session.GetString("FirstName"))</a>
                        </li>
                    }
                    
                    else 
                    {
                    <li class="nav-item ml-5">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignIn">Login</a>
                    </li>
                    }
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item ml-5">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Profile">Profile</a>
                        </li>
                    }
                    @* <li class="nav-item ml-5">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard" asp-route-userId="@HttpContext.Session.GetInt32('UserId')">About</a>
                    </li> *@
            </ul>
        </div>
        </nav>

    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2021 - twelve_pins - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
