@model User

<div class="text-center d-flex-column m-4" >
    <h1 class="display-4">@Model.FirstName @Model.LastName</h1>
      </div>
      <h3 class="m-4">Lane Reservations</h3>
      <table class="m-4 px-3" style="border: 3px black solid; padding: 20px">
        <thead class="m-4">
          <th style="border: 3px black solid; padding: 20px">Time</th>
          <th style="border: 3px black solid; padding: 20px">Lane</th>
        </thead>
        @foreach(ReservedLane resLane in @Model.Lanes)
        {
          <tr>
            <td style="border: 3px black solid; padding: 20px">@resLane.ReserveDate</td>
            <td style="border: 3px black solid; padding: 20px">@resLane.ReservedLaneId</td>
          </tr>
        }
      </table>
      <h3 class="m-4">Leagues</h3>
        @if(@Model.Leagues.Count < 1)
        {
          <button class="btn-nav">Join a League</button>
        }
        else 
        {
          <table class="m-4 px-3" style="border: 3px black solid; padding: 20px">
            <thead class="m-4">
              <th style="border: 3px black solid; padding: 20px">Name</th>
              <th style="border: 3px black solid; padding: 20px">Description</th>
              <th style="border: 3px black solid; padding: 20px">Founding Date</th>
            </thead>
            @foreach(LeagueMember league in @Model.Leagues)
            {
              <tr>
                <td style="border: 3px black solid; padding: 20px">@league.League.Name</td>
                <td style="border: 3px black solid; padding: 20px">@league.League.Description</td>
                <td style="border: 3px black solid; padding: 20px">@league.League.MeetingDay</td>
              </tr>
          }
          </table>
        }
    </div>
