@model League

<style>
.btn-nav {
	background-color: #4682B4;
	border: none;
	color: white;
	padding: 10px 20px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 16px;
	margin: 4px 2px;
	transition-duration: 0.4s;
	cursor: pointer;
  border-radius: 3px;
}
.btn-nav:hover {
	background-color: #007BFF;
}
</style>

<h3 class="text-center mt-5 display-4 text-light">Create League</h3>
<hr />

<form asp-controller="Event" asp-action="CreateLeague" method="POST" class="ml-5">
  <div class="form-group">
    <label asp-for="Name" class="text-light"></label>
    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    <input asp-for="Name" class="form-control" />
  </div>
      <div class="form-group">
        <label asp-for="Description" class="text-light"></label>
        <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
        <textarea asp-for="Description" class="form-control" ></textarea>
      </div>

      <div class="form-group">
        <label asp-for="MeetingDay" class="text-light"></label>
        <span asp-validation-for="MeetingDay" class="text-danger font-weight-bold"></span>
        <input asp-for="MeetingDay" class="form-control" placeholder="ex. Fridays at 5:00 PM" />
      </div>
      <button class="btn-nav">Create League</button>
    </form>

